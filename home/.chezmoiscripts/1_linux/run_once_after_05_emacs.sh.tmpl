#!/bin/bash
set -euo pipefail

has() {
    type "$1" > /dev/null 2>&1
}

{{- if ne (env "REMOTE_CONTAINERS") "true" }}
source ~/.profile
if has "emacs"; then
    echo "install doom emacs"
    ~/.config/emacs/bin/doom install
    ~/.config/emacs/bin/doom sync
    mkdir -p ~/Documents && ln -s /mnt/c/Users/$(whoami)/Documents/memo ~/Documents/memo
fi
{{- end }}
